        <button class="article_button" onclick="showDiv()">Write Article</button>

        <button class="upload_file" onclick="showDiv2()">Upload File</button>
        
        <form action="/" method="POST"></form>
        <span class="article_section" style="display:none;" id="article_section_id">
            <textarea name="article" id="inputbox" cols="60" rows="10" class="center" placeholder="Enter your article here"></textarea>
            <button type="submit" class="center btn btn-primary buttonH " id="summ">Summarize It</button>
        </span>

        <span class="filesend_section" id="filesend_section_id" style="display:none;">
        <form action="/snd" method="POST"  enctype="multipart/form-data">
